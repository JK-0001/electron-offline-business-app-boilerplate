{
  "appId": "com.template.offlineapp",
  "productName": "My Business App",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "build-resources/icon.ico"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build-resources/icon.png"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build-resources/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "asarUnpack": ["node_modules/better-sqlite3/**"]
}
